<% layout('layouts/boilerplate') -%>

    <body>
        <div class="row mt-2">
            <div class="col-8 offset-2">

                <h1>Create new List</h1>
                <form action="/listings/<%=listing._id%>?_method=PUT" method="POST" novalidate class="needs-validation"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-lable">Title:</label>
                        <input type="text" value="<%= listing.title%>" class="form-control" name="listing[title]"
                            required>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Title name should be valid</div>


                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-lable">Description:</label>
                        <textarea type="text" name="listing[description]" class="form-control"
                            required><%= listing.description%></textarea>
                        <div class="invalid-feedback">Please enter a short description</div>
                    </div>
                    <div class="mb-3">
                        <p>Original Image:</p>
                        <img src="<%=listing.image.url%>" height="150px" width="250px">
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload New Image:</label>
                        <input type="file" placeholder="Enter image URL/Link" value="<%=listing.image %>" name="listing[image]"
                            class="form-control">
                        <div class="invalid-feedback">Image URL/link should be required</div>

                    </div>
                    <div class="row">

                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-lable">Price:</label>
                            <input type="number" value="<%= listing.price%>" name="listing[price]" class="form-control"
                                required>
                            <div class="invalid-feedback">Price sholud be valid</div>

                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-lable">Country:</label>
                            <input type="text" class="form-control" value="<%= listing.country%>"
                                name="listing[country]" required>
                            <div class="invalid-feedback">Country name should be valid</div>

                        </div>
                    </div>
                    <div class="row">

                        <div class="mb-3 col-7">
                            <label for="location" class="form-lable"></label>
                            <input type="text" class="form-control" value="<%= listing.location%>" name="listing[location]"
                                required>
                            <div class="invalid-feedback">Location should be valid</div>
    
                        </div>
                        <div class="mb-3 col-5">
                            <label class="form-lable" for="category">Category:</label>
                            <select name="listing[category]" id="category" class="form-select form-select-md mb-3" aria-label="Large select example">
                                <option selected ><%=listing.category %></option>
                                <option value="Trending">Trending</option>
                                <option value="Pool">Pool</option>
                                <option value="Iconic">Iconic</option>
                                <option value="Rooms">Rooms</option>
                                <option value="Beach">Beach</option>
                                <option value="Mountains">Mountains</option>
                                <option value="TinyHomes">TinyHomes</option>
                                <option value="Camping">Camping</option>
                                <option value="Farms">Farms</option>
                                <option value="Arctic">Arctic</option>
                                <option value="Castles">Castles</option>
                            </select>
                            <div class="invalid-feedback">Location should be valid</div>
                        </div>    
                    </div>
                    <br><br>
                    <button class="mt-4 btn btn-dark edit-btn">Edit</button>
                </form>
                <br>
            </div>
        </div>

    </body>