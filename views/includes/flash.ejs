<%if(success && success.length){%>
    <div class="alert alert-success alert-dismissible fade show col-8 offset-2 pt-1 pb-1" role="alert">
        <button type="button" class="btn-close btn-sm pt-0" data-bs-dismiss="alert" aria-label="Close"></button>
        <%=success%>
    </div>
    <%}%>

    <%if(error && error.length){%>
    <div class="alert alert-danger alert-dismissible fade show col-8 offset-2 pt-1 pb-1" role="alert">
        <button type="button" class="btn-close btn-sm pt-0" data-bs-dismiss="alert" aria-label="Close"></button>
        <%=error%>
    </div>
    <%}%>